<article class="w-full border-2 rounded-10 border-sky-400 p-10">
    <a href="{{ post.url }}" class="w-full">
        <img src="{{ post.acf.img.url }}" alt="{{ post.acf.img.alt }}" class="aspect-[16/9] w-full object-cover">
    </a>

    <time datetime="{{ post.post_date }}" class="block text-20 text-sky-600 font-700 py-10">
        {{ post.post_date|date('d/m/Y') }}
    </time>

    <h2 class="text-32 font-700 mb-20">
        <a href="{{ post.url }}">
            {{ post.post_title }}
        </a>
    </h2>

    <p>
        {{ post.post_excerpt }}
    </p>

    <a href="{{ post.url }}">
        Czytaj wiÄ™cej...
    </a>

    {# {{ d(post) }} #}
</article>