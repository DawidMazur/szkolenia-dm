{% extends "core/base.twig" %}

{% block content %}
    <h1 class="text-32 font-700">
        {{ acf_global.example_posts.title }}
    </h1>

    <div class="w-full max-w-1200 px-20 mx-auto grid grid-cols-3">
        {% for item in posts %}
            {% include "views/components/post-prev/post-prev.twig" with {
                post: item,
            } %}
        {% endfor %}
    </div>

    {{ d(posts) }}
{% endblock %}