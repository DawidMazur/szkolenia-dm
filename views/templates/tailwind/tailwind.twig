{% extends "core/base.twig" %}

{% block content %}
    {% embed "views/layouts/quide_layout.twig" %}
        {% block content %}
            {% include "views/components/breadcrumbs/breadcrumbs.twig" with {
                breadcrumbs_list: breadcrumbs_list
            } only %}

            <h1 class="text-40 mb-20">
                {{ post.post_title }}
            </h1>

            <div class="w-full">
                {# {{ d(posts) }} #}
                <div class="w-full flex flex-col md:grid gap-10 md:grid-cols-2 slap:grid-cols-3">
                    {% for i in posts %}
                        {% include "views/components/post-prev/post-prev.twig" with {
                            post: i,
                        } %}
                    {% endfor %}
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}